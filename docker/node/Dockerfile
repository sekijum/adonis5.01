FROM node:16.14.2

ENV APP_ROOT /var/www

WORKDIR $APP_ROOT

ARG PUID=1000
ARG PGID=1000
ARG USERNAME=admin
ARG GROUPNAME=admin

RUN useradd -m -s /bin/bash -u $PUID -g $GROUPNAME $USERNAME

ADD . $APP_ROOT
RUN chown -R $USERNAME:$GROUPNAME $APP_ROOT
RUN chmod 755 $APP_ROOT

USER $PUID

EXPOSE 3333
